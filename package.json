{
  "name": "basedtraders",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "concurrently \"npm run server\" \"vite\"",
    "server": "tsx server/unified.ts",
    "start": "cross-env NODE_ENV=production tsx server/unified.ts",
    "build": "tsc -b && vite build",
    "lint": "eslint .",
    "preview": "vite preview",
    "migrate:supabase": "tsx scripts/migrate-to-supabase.ts",
    "deploy:testnet": "npx hardhat run scripts/deploy.ts --network base-sepolia",
    "deploy:mainnet": "npx hardhat run scripts/deploy.ts --network base",
    "setup:testnet": "npx hardhat run scripts/setup-achievements.ts --network base-sepolia",
    "setup:mainnet": "npx hardhat run scripts/setup-achievements.ts --network base",
    "verify:testnet": "npx hardhat verify --network base-sepolia",
    "verify:mainnet": "npx hardhat verify --network base"
  },
  "dependencies": {
    "@farcaster/auth-kit": "^0.8.1",
    "@farcaster/miniapp-sdk": "^0.2.1",
    "@farcaster/miniapp-wagmi-connector": "^1.1.0",
    "@supabase/supabase-js": "^2.47.10",
    "@tanstack/react-query": "^5.90.7",
    "@vercel/og": "^0.8.6",
    "axios": "^1.13.2",
    "better-sqlite3": "^12.4.1",
    "canvas": "^3.2.0",
    "cors": "^2.8.5",
    "dotenv": "^17.2.3",
    "express": "^5.1.0",
    "react": "^19.1.1",
    "react-dom": "^19.1.1",
    "viem": "^2.38.6",
    "wagmi": "^2.19.2",
    "ws": "^8.18.3"
  },
  "devDependencies": {
    "@types/better-sqlite3": "^7.6.13",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.4",
    "@types/node": "^24.6.0",
    "@types/react": "^19.1.16",
    "@types/react-dom": "^19.1.9",
    "@types/ws": "^8.18.1",
    "@vercel/node": "^3.0.21",
    "@vitejs/plugin-react": "^5.0.4",
    "autoprefixer": "^10.4.18",
    "concurrently": "^9.2.1",
    "cross-env": "^10.1.0",
    "postcss": "^8.4.35",
    "tailwindcss": "^3.4.1",
    "tsx": "^4.20.6",
    "typescript": "~5.9.3",
    "vite": "^7.1.7"
  }
}
